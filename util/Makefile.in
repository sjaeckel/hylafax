DEPTH=..
@MAKEINCLUDE@ @MAKELQUOTE@${DEPTH}/defs@MAKERQUOTE@

SRCDIR	= ${DEPTH}/${TOPSRCDIR}/util
VPATH	= ../@SRCDIR@/util

C++FILES=\
	Array.c++ \
	BoolArray.c++ \
	Dictionary.c++ \
	Obj.c++ \
	PageSize.c++ \
	RegEx.c++ \
	RegExArray.c++ \
	StackBuffer.c++ \
	Str.c++ \
	StrArray.c++ \
	StrDict.c++ \
	\
	Dispatcher.c++ \
	IOHandler.c++ \
	Sys.c++ \
	Timeout.c++ \
	\
	AtSyntax.c++ \
	DialRules.c++ \
	FaxDB.c++ \
	FaxClient.c++ \
	FmtTime.c++ \
	SendFaxClient.c++ \
	TimeOfDay.c++ \
	TypeRules.c++ \
	Fatal.c++
CFILES=\
	cvtfacility.c \
	fxassert.c
REGEXOBJS=\
	regexec.o \
	regcomp.o \
	regfree.o \
	regerror.o
TARGETS=libfaxutil.${DSO} faxmsg faxinfo textfmt dialtest typetest

default all::
	@${MAKE} incdepend
	@${MAKE} targets

targets: $(TARGETS)

@MAKEINCLUDE@ @MAKELQUOTE@${COMMONRULES}@MAKERQUOTE@

libfaxutil.a: ${OBJECTS} ${REGEXOBJS}
	@rm -f $@;
	@echo "${AR} ${AROPTS} $@ ${OBJECTS} ${REGEXOBJS}"; \
	    ${AR} ${AROPTS} $@ ${OBJECTS} ${REGEXOBJS} ${C++FILT}
	${RANLIB} $@
../util/libfaxutil.a: libfaxutil.a

regexec.o: ${SRCDIR}/regex/regexec.c
	${CCF} -c -I${SRCDIR}/regex ${SRCDIR}/regex/regexec.c
regcomp.o: ${SRCDIR}/regex/regcomp.c
	${CCF} -c -I${SRCDIR}/regex ${SRCDIR}/regex/regcomp.c
regfree.o: ${SRCDIR}/regex/regfree.c
	${CCF} -c -I${SRCDIR}/regex ${SRCDIR}/regex/regfree.c
regerror.o: ${SRCDIR}/regex/regerror.c
	${CCF} -c -I${SRCDIR}/regex ${SRCDIR}/regex/regerror.c

faxmsg: ${SRCDIR}/faxmsg.c ${LIBS}
	${CCF} -o $@ ${SRCDIR}/faxmsg.c ${LDFLAGS}
faxinfo.o: ${SRCDIR}/faxinfo.c++
	${C++F} -c ${C++FILE} ${SRCDIR}/faxinfo.c++@MAKECXXOVERRIDE@
faxinfo: faxinfo.o ${LIBS}
	${C++F} -o $@ faxinfo.o ${LDFLAGS}
textfmt.o: ${SRCDIR}/textfmt.c++
	${C++F} -c ${C++FILE} -DFONTDIR=\"${AFMDIR}\" \
	    ${SRCDIR}/textfmt.c++@MAKECXXOVERRIDE@
textfmt: textfmt.o ${LIBS}
	${C++F} -o $@ textfmt.o ${LDFLAGS}
dialtest.o: ${SRCDIR}/dialtest.c++
	${C++F} -c ${C++FILE} ${SRCDIR}/dialtest.c++@MAKECXXOVERRIDE@
dialtest: dialtest.o DialRules.o RegExArray.o ${LIBS}
	${C++F} -o $@ dialtest.o DialRules.o RegExArray.o ${LDFLAGS}
typetest.o: ${SRCDIR}/typetest.c++
	${C++F} -c ${C++FILE} ${SRCDIR}/typetest.c++@MAKECXXOVERRIDE@
typetest: typetest.o TypeRules.o ${LIBS}
	${C++F} -o $@ typetest.o TypeRules.o ${LDFLAGS}

LDIRT=	checkat
checkat.o: ${SRCDIR}/checkat.c++
	${C++F} -c ${C++FILE} ${SRCDIR}/checkat.c++@MAKECXXOVERRIDE@
checkat: checkat.o ${LIBS}
	${C++F} -o $@ checkat.o ${LDFLAGS}

PUTCLIENT	= ${INSTALL} -idb ${PRODUCT}.sw.client
PUTSERVER	= ${INSTALL} -idb ${PRODUCT}.sw.server
PUTSERV		= ${PUTSERVER} -m 755
PUTSUPD		= ${PUTSERVER} -F ${SPOOL}/bin -idb "config(update)"
PUTSBIN		= ${PUTSERVER} -F ${SBIN}

installClient: default
	${PUTCLIENT} -F ${LIBEXEC} -m 755 -O textfmt
	${PUTCLIENT} -F ${LIBDATA} -m 444 -O pagesizes
	${PUTCLIENT} -F ${LIBDATA} -m 444 -src ${SRCDIR}/typerules -O typerules

install: installClient
	${PUTSBIN} -m 755 -O faxmsg
	${PUTSBIN} -idb ${PRODUCT}.sw.server \
	    -ln ${SBIN}/faxmsg -O faxabort faxanswer faxquit
	${PUTSBIN} -m 755 -O faxinfo dialtest typetest
	${PUTSBIN} -m 755 -src xferstats.sh -O xferstats
	${PUTSBIN} -m 755 -src recvstats.sh -O recvstats
	${PUTSBIN} -m 755 -idb "config(update)" -src faxcron.sh -O faxcron
	${PUTSUPD} -m 755 -src ps2fax.gs.sh -O ps2fax.gs
	${PUTSUPD} -m 755 -src ps2fax.dps.sh -O ps2fax.dps
	${PUTSUPD} -m 755 -src notify.sh -O notify
	${PUTSUPD} -m 444 -src ${SRCDIR}/notify.awk -O notify.awk
	${PUTSUPD} -m 755 -src faxrcvd.sh -O faxrcvd
	${PUTSUPD} -m 755 -src pollrcvd.sh -O pollrcvd
	${PUTSUPD} -m 755 -src mkcover.sh -O mkcover
	${PUTSUPD} -m 755 -src transcript.sh -O transcript
	${PUTSERVER} -F ${SPOOL}/etc -m 444 -idb "config(update)" \
	    -src ${SRCDIR}/dpsprinter.ps -O dpsprinter.ps
	${PUTSERVER} -F ${SPOOL}/bin -idb "config(suggest)" \
	     -ln ${SPOOL}/bin/ps2fax.${PSPACKAGE} -O ps2fax
	${PUTSERVER} -F ${SPOOL}/etc -idb "config(suggest)" \
	    -m 444 -src ${SRCDIR}/cover.templ -O cover.templ

@MAKEDSOINCLUDE@ @MAKELQUOTE@${SRCDIR}/Makefile.dso@MAKERQUOTE@

#
# These targets are created during the configuration procedure.
#
clobberconfig:
	-${RM} -f pagesizes
	-${RM} -f ps2fax.gs.sh ps2fax.dps.sh
	-${RM} -f notify.sh faxrcvd.sh pollrcvd.sh transcript.sh mkcover.sh
	-${RM} -f xferstats.sh recvstats.sh faxcron.sh
