#
# Convert PCL to facsimile.
#
# pcl2fax [-o output] [-l pagelength] [-w pagewidth]
#	[-r resolution] [-m maxpages] [-*] file ...
#
# NB: this shell script is assumed to be run from the
#     top of the spooling hierarchy -- s.t. the etc directory
#     is present.
#

test -f etc/setup.cache || {
    SPOOL=`pwd`
    cat<<EOF

FATAL ERROR: $SPOOL/etc/setup.cache is missing!

The file $SPOOL/etc/setup.cache is not present.  This
probably means the machine has not been setup using the faxsetup(@MANNUM1_8@)
command.  Read the documentation on setting up HylaFAX before you
startup a server system.

EOF
    exit 1
}
. etc/setup.cache

if [ ! -x "$PCL6CMD" ]; then
    echo "PCL documents are not (currently) supported."
    exit 254			# causes document to be rejected
fi

PS2FAX=bin/ps2fax

jobid=
out=pcl.fax				# default output filename
fil=
opt=
while test $# != 0
do case "$1" in
    -i) shift; jobid=$1; opt="$opt -i $1" ;;
    -o) shift; out=$1 ;;
    -l) shift; opt="$opt -l $1" ;;
    -w) shift; opt="$opt -w $1" ;;
    -r) shift; opt="$opt -r $1" ;;
    -1) opt="$opt $1";;
    -2) opt="$opt $1";;
    -3) opt="$opt $1";;
    -m) shift;;				# NB: not implemented
    -U) opt="$opt $1" ;;
    *)  fil="$fil $1" ;;
    esac
    shift
done
test -z "$fil" && {
    echo "$0: No input file specified."
    exit 255
}

( $PCL6CMD -dNOPAUSE -sDEVICE=pswrite -sOutputFile=- $fil | $PS2FAX -o $out $opt ) || {
    $CAT<<EOF
Unexpected failure converting PCL document; the command

    $PCL6CMD -dNOPAUSE -sDEVICE=pswrite -sOutputFile=- $fil | $PS2FAX -o $out $opt

failed with exit status $?.

EOF
    exit 254
}

exit 0
