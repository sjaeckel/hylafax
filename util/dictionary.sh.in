#! @SCRIPT_SH@
#    $Id: dictionary.sh.in 732 2007-12-10 17:20:36Z faxguy $

LANG=`echo $LANG | sed 's/^cn_/zh_/'`	# fix wrong Chinese locale

case "$LANG" in
    pl_*)
	. bin/dict/pl
	;;
    fr_*)
	. bin/dict/fr
	;;
    it_*)
	. bin/dict/it
	;;
    pt_BR*)
	. bin/dict/pt_BR
	;;
    pt_*)
	. bin/dict/pt
	;;
    es_*)
	. bin/dict/es
	;;
    de_*)
	. bin/dict/de
	;;
    ro_*)
	. bin/dict/ro
	;;
    tr_*)
	. bin/dict/tr
	;;
    zh_*)
	. bin/dict/zh
	;;
    *)
	. bin/dict/en
	;;
esac

#
# Modify LANG according to CHARSET
#
LANG="`echo $LANG | $SED 's/\..*//'`.$CHARSET"
export LANG
