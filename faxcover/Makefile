DEPTH=..
include ${DEPTH}/defs

C++FILES=\
	faxcover.c++ \
	${NULL}
TARGETS=faxcover

default all::
	@${MAKE} incdepend
	@${MAKE} targets

targets: $(TARGETS)

include ${COMMONRULES}

faxcover: faxcover.o ${LIBS}
	${C++F} -o $@ faxcover.o ${LDFLAGS}

install: default faxcover.ps
	${INSTALL} -F ${BIN} -m 755 -idb ${PRODUCT}.sw.client -O faxcover
	${INSTALL} -F ${LIBDATA} -m 644 \
	    -idb "${PRODUCT}.sw.client config(suggest)" -O faxcover.ps
