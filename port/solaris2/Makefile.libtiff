	${RANLIB} libtiff.a

tif_fax3.o: g3states.h
incdepend: g3states.h

g3states.h: mkg3states.c t4.h
	${CC} -o mkg3states ${CFLAGS} mkg3states.c
	./mkg3states -c > g3states.h
