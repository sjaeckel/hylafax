TARGETS=libtiff.a

LDIRT=	g3states.h mkg3states

default all::
	@${MAKE} incdepend
	@${MAKE} targets

targets: $(TARGETS)

include ${COMMONRULES}

libtiff.a: ${OBJECTS}
